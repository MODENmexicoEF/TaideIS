  "paths": {
    "/api/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/auth/registrar": {
      "post": {
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "required": [
                  "Ap1",
                  "Contrasena",
                  "Correo",
                  "NombreUsuario",
                  "RolInput"
                ],
                "type": "object",
                "properties": {
                  "NombreUsuario": {
                    "type": "string"
                  },
                  "Ap1": {
                    "type": "string"
                  },
                  "Ap2": {
                    "type": "string"
                  },
                  "Correo": {
                    "type": "string",
                    "format": "email"
                  },
                  "Contrasena": {
                    "type": "string"
                  },
                  "RolInput": {
                    "type": "string"
                  },
                  "Preguntas": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "Respuestas": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "NumeroColegiado": {
                    "type": "string"
                  },
                  "Especialidad": {
                    "type": "string"
                  }
                }
              },
              "encoding": {
                "NombreUsuario": {
                  "style": "form"
                },
                "Ap1": {
                  "style": "form"
                },
                "Ap2": {
                  "style": "form"
                },
                "Correo": {
                  "style": "form"
                },
                "Contrasena": {
                  "style": "form"
                },
                "RolInput": {
                  "style": "form"
                },
                "Preguntas": {
                  "style": "form"
                },
                "Respuestas": {
                  "style": "form"
                },
                "NumeroColegiado": {
                  "style": "form"
                },
                "Especialidad": {
                  "style": "form"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/auth/usuarios": {
      "get": {
        "tags": [
          "Auth"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
